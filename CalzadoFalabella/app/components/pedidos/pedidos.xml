<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded" id="pedidosScreen" cssClass="screen">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <StackLayout>

        <ScrollView>
            <StackLayout>


                <GridLayout columns="*" rows="auto, auto" cssClass="form-item field field--text" id="productoField">


                    <Label text="Producto" cssClass="label" col="1" row="0" />


                    <TextField col="1" row="1" text="{{ producto }}" />

                    <!-- producto content -->

                </GridLayout>

                <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                <GridLayout columns="*" rows="auto, auto" cssClass="form-item field field--text" id="estadoField">


                    <Label text="Estado" cssClass="label" col="1" row="0" />


                    <TextField col="1" row="1" text="{{ estado }}" />

                    <!-- estado content -->

                </GridLayout>

                <StackLayout cssClass="form-item-border" height="1"></StackLayout>
                <!-- pedidosModel additional fields -->


                <GridLayout columns="*, *" rows="auto" cssClass="form-buttons">

                    <widgets:button text="Cancelar" tap="{{onpedidosModelFormCancel}}" />


                    <widgets:button col="1" text="Solicitar" tap="{{onpedidosModelFormSubmit}}" />

                </GridLayout>
            </StackLayout>
        </ScrollView>
        <!-- additional view content -->

        <!-- START_CUSTOM_CODE_pedidos -->
        <!-- Add custom code here. For more information about custom code, see http://docs.telerik.com/platform/screenbuilder/troubleshooting/how-to-keep-custom-code-changes -->

        <!-- END_CUSTOM_CODE_pedidos -->
    </StackLayout>
</Page>