<Page xmlns="http://schemas.nativescript.org/tns.xsd"  xmlns:widgets="utils/widgets" loaded="pageLoaded" id="categoriasScreen" cssClass="screen" tap="resetCount">
    <!--<Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>-->

    <ActionBar>
        <ActionBar.titleView>
            <GridLayout columns="auto, 5, *">
            <Image src="~/images/logo.png" width="70" height="70"  />
            <Label col="2" text="CategorÃ­as" minWidth="100" />
            </GridLayout>
        </ActionBar.titleView> 
    </ActionBar>

    <StackLayout>
        <GridLayout rows="auto, auto,*">
            <Repeater row="1" items="{{ listItems }}" >
                            <Repeater.itemsLayout >
                                <WrapLayout />
                            </Repeater.itemsLayout>
                            <Repeater.itemTemplate >
                                <GridLayout rows="*, auto" tap="onListViewItemTap" index="{{ index }}" cssClass="{{ 'padded-label-stack-' + index }}" padding="50" marginTop="50" marginBottom="0"  marginLeft="50" marginRight="50" width="410" >
                                    <android>
                                        <Image src="{{ '~/images/categorias/' + imagen + '.jpg'}}" loadMode="async" stretch="aspectFill"/>
                                    </android>
                                    <ios>
                                        <Image src="{{ '~/images/categorias/' + imagen + '.jpg'}}" stretch="aspectFill" loadMode="async"/>
                                    </ios>
                                    <StackLayout row="1" cssClass="recipeContainer" marginTop="30" >
                                        <Label text="{{ header }}" cssClass="title-label"  textWrap="true"/> 
                                    </StackLayout>
                                </GridLayout>
                            </Repeater.itemTemplate>
            </Repeater>
            
            <ActivityIndicator row="2" busy="{{ isLoading }}" />
            
             {%raw%}<WebView row="2" style.verticalAlignment="bottom" loadMode="async"   height="540" width="1080" src="http://designer.4yousee.com/play/rkK56mctx"/>{%endraw%}
                
        </GridLayout>

        </StackLayout>



