    <ScrollView>
        <Repeater items="{{ listItems }}">
            <Repeater.itemsLayout>
                <WrapLayout />
            </Repeater.itemsLayout>
            <Repeater.itemTemplate>
                <GridLayout rows="*, auto" tap="onListViewItemTap" index="{{ index }}" margin="10" width="100">
                    <android>
                        <Image src="{{ subruta ? '~/images/'+categoria+'/' + imagen + '.jpg' : '~/images/vacio.jpg'}}" loadMode="async" stretch="aspectFill"/>
                    </android>
                    <ios>
                        <Image src="{{ subruta ? '~/images/'+categoria+'/' + imagen + '.jpg' : '~/images/vacio.jpg'}}" stretch="aspectFill" loadMode="async" />
                    </ios>
                    <StackLayout row="1" cssClass="recipeContainer">
                        <Label text="{{ header }}" cssClass="recipeTitle"/>
                        <!--<Label text="{{ descripcion }}" cssClass="recipeAuthor"/>-->
                    </StackLayout>
                </GridLayout>
            </Repeater.itemTemplate>
        </Repeater>
    </ScrollView>
